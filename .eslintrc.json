{
  "extends": [
    "next/core-web-vitals",
    "plugin:jsx-a11y/recommended"
  ],
  "plugins": ["jsx-a11y"],
  "rules": {
    // Accessibility Rules (WCAG 2.2 AAA Compliance)
    "jsx-a11y/alt-text": "error",
    "jsx-a11y/aria-props": "error",
    "jsx-a11y/aria-proptypes": "error",
    "jsx-a11y/aria-unsupported-elements": "error",
    "jsx-a11y/role-has-required-aria-props": "error",
    "jsx-a11y/role-supports-aria-props": "error",
    "jsx-a11y/interactive-supports-focus": "error",
    "jsx-a11y/click-events-have-key-events": "error",
    "jsx-a11y/no-static-element-interactions": "warn", // Allow for role="application"
    "jsx-a11y/no-noninteractive-tabindex": "off", // Allow for role="application"
    "jsx-a11y/no-noninteractive-element-interactions": "off", // Allow for interactive maps
    "jsx-a11y/anchor-is-valid": "error",
    "jsx-a11y/heading-has-content": "error",
    "jsx-a11y/label-has-associated-control": "error",
    
    // Design Token Enforcement (warnings for now, errors in CI/CD)
    "no-magic-numbers": ["warn", {
      "ignore": [0, 1, -1, 2, 10, 100, 1000],
      "ignoreArrayIndexes": true,
      "enforceConst": true,
      "detectObjects": false,
      "ignoreDefaultValues": true
    }]
  },
  "overrides": [
    {
      "files": [
        "src/app/**/*.tsx",
        "src/app/**/*.ts",
        "src/app/api/**/*.ts",
        "src/components/**/*.tsx",
        "src/components/**/*.ts",
        "src/lib/**/*.ts",
        "src/lib/**/*.tsx",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/__tests__/**/*.ts",
        "**/__tests__/**/*.tsx"
      ],
      "rules": {
        "no-magic-numbers": "off"
      }
    }
  ]
}
