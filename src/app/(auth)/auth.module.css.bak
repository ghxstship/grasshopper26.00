/**
 * Auth Pages - GHXSTSHIP Design System
 * Zero tolerance compliance: CSS Modules only, design tokens only
 * Optimized for UI/UX best practices: visual hierarchy, alignment, spacing rhythm
 */

/* ========================================
   AUTH CONTENT CONTAINER
   ======================================== */
.authContent {
  display: flex;
  flex-direction: column;
  gap: var(--space-5);
}

/* ========================================
   HEADER SECTION
   ======================================== */
.header {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  text-align: center;
}

.title {
  font-family: var(--font-heading);
  font-size: var(--font-size-2xl);
  font-weight: var(--font-weight-normal);
  line-height: var(--line-height-tight);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-primary);
  margin: 0;
}

@media (min-width: 640px) {
  .title {
    font-size: var(--font-size-3xl);
  }
}

.description {
  font-family: var(--font-body);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  color: var(--color-text-secondary);
  margin: 0;
}

@media (min-width: 640px) {
  .description {
    font-size: var(--font-size-base);
  }
}

/* ========================================
   FORM SECTION
   ======================================== */
.form {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.formField {
  display: flex;
  flex-direction: column;
  gap: var(--space-1-5);
}

.label {
  font-family: var(--font-heading);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-normal);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wider);
  color: var(--color-text-primary);
  margin: 0;
}

.fieldWithLink {
  display: flex;
  flex-direction: column;
  gap: var(--space-1-5);
}

.labelRow {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.forgotLink {
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 2px;
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  transition: color var(--duration-fast) var(--easing-out);
  white-space: nowrap;
}

.forgotLink:hover {
  color: var(--color-text-primary);
}

.forgotLink:focus-visible {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

.helperText {
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  color: var(--color-text-tertiary);
  margin: 0;
  margin-block-start: calc(var(--space-1) * -1);
}

/* ========================================
   DIVIDER SECTION
   ======================================== */
.dividerSection {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

.divider {
  display: flex;
  align-items: center;
  gap: var(--space-3);
  margin-block: var(--space-1);
}

.divider::before,
.divider::after {
  content: '';
  flex: 1;
  block-size: 2px;
  background-color: var(--color-border-default);
}

.divider span {
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-widest);
  color: var(--color-text-tertiary);
  white-space: nowrap;
  padding-inline: var(--space-1);
}

/* ========================================
   OAUTH SECTION
   ======================================== */
.oauthButtons {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-2-5);
}

@media (min-width: 400px) {
  .oauthButtons {
    grid-template-columns: repeat(2, 1fr);
  }
}

/* ========================================
   FOOTER SECTION
   ======================================== */
.footer {
  text-align: center;
  font-family: var(--font-family-mono);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  color: var(--color-white);
}

@media (min-width: 640px) {
  .footer {
    font-size: var(--font-size-base);
  }
}

/* ========================================
   LINKS
   ======================================== */
.link {
  font-family: var(--font-family-mono);
  font-size: inherit;
  color: var(--color-white);
  text-decoration: underline;
  text-decoration-thickness: 2px;
  text-underline-offset: 2px;
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  font-weight: var(--font-weight-bold);
  transition: opacity var(--duration-fast) var(--easing-out);
  cursor: pointer;
}

.link:hover {
  opacity: 0.7;
}

.link:focus-visible {
  outline: var(--border-width-2) solid var(--color-text-primary);
  outline-offset: 0.125rem;
}

/* Profile Page Specific */
.pageContainer {
  min-block-size: 100vh;
  background-color: var(--color-white);
  padding: var(--space-8);
}

.maxWidth {
  max-inline-size: 72rem;
  margin-inline: auto;
}

.pageHeader {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-block-end: var(--space-8);
  border-block-end: var(--border-width-3) solid var(--color-black);
  padding-block-end: var(--space-4);
}

.pageTitle {
  font-family: var(--font-anton);
  font-size: var(--font-size-hero);
  text-transform: uppercase;
  color: var(--color-black);
}

.tabsList {
  background-color: var(--color-grey-100);
  border: var(--border-width-3) solid var(--color-black);
}

.avatar {
  block-size: 5rem;
  inline-size: 5rem;
  border: var(--border-width-3) solid var(--color-black);
}

.avatarFallback {
  background-color: var(--color-grey-100);
  color: var(--color-black);
  font-family: var(--font-bebas);
  font-size: var(--font-size-2xl);
}

.label {
  font-family: var(--font-bebas);
  font-size: var(--font-size-base);
  text-transform: uppercase;
  color: var(--color-grey-600);
}

.value {
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  color: var(--color-black);
}

.textarea {
  display: flex;
  inline-size: 100%;
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
  padding-inline: var(--space-3);
  padding-block: var(--space-2);
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  color: var(--color-black);
}

.textarea::placeholder {
  color: var(--color-grey-500);
}

.textarea:focus-visible {
  outline: none;
  box-shadow: 0 0 0 2px var(--color-black);
}

.textarea:disabled {
  cursor: not-allowed;
  opacity: 0.5;
}


.bgBlack {
  background-color: var(--color-black);
}

.bgWhite {
  background-color: var(--color-white);
}

.borderBlack {
  border-color: var(--color-black);
}

.emptyIcon {
  inline-size: var(--space-16);
  block-size: var(--space-16);
  margin-inline: auto;
  color: var(--color-grey-600);
  margin-block-end: var(--space-4);
}

.textGrey600 {
  color: var(--color-grey-600);
}

.textGrey700 {
  color: var(--color-grey-700);
}

.textBlack {
  color: var(--color-black);
}

.textWhite {
  color: var(--color-white);
}

.flexCenter {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flexBetween {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gap2 {
  gap: var(--space-2);
}

.gap4 {
  gap: var(--space-4);
}

/* ========================================
   CHECKBOX SECTION
   ======================================== */
.checkboxRow {
  display: flex;
  align-items: flex-start;
  gap: var(--space-2-5);
  padding-block: var(--space-1);
}

.checkbox {
  inline-size: 18px;
  block-size: 18px;
  min-inline-size: 18px;
  min-block-size: 18px;
  margin-block-start: 3px;
  cursor: pointer;
  accent-color: var(--color-text-primary);
  border: var(--border-width-2) solid var(--color-border-default);
}

.checkboxLabel {
  font-family: var(--font-body);
  font-size: var(--font-size-xs);
  color: var(--color-text-secondary);
  line-height: var(--line-height-normal);
  cursor: pointer;
}

.checkboxLabel .link {
  color: var(--color-text-primary);
  font-size: var(--font-size-xs);
}

@media (min-width: 640px) {
  .checkboxLabel {
    font-size: var(--font-size-sm);
  }
  
  .checkboxLabel .link {
    font-size: var(--font-size-sm);
  }
}
