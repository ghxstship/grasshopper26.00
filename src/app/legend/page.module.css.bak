/**
 * Legend Portal Dashboard
 * GHXSTSHIP Monochromatic Design System
 */

.container {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
  padding-block: var(--space-8);
  padding-inline: var(--space-8);
}

.header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-block-end: var(--space-6);
  border-block-end: var(--border-width-thick) solid var(--color-border-strong);
}

.title {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-3xl);
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-primary);
  margin: 0;
}

.content {
  display: flex;
  flex-direction: column;
  gap: var(--space-8);
}

.welcomeSection {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding-block: var(--space-6);
}

.welcomeTitle {
  font-family: var(--font-family-anton);
  font-size: var(--font-size-4xl);
  letter-spacing: var(--letter-spacing-tight);
  color: var(--color-text-primary);
  margin: 0;
}

.welcomeSubtitle {
  font-family: var(--font-family-share-mono);
  font-size: var(--font-size-sm);
  letter-spacing: var(--letter-spacing-meta);
  color: var(--color-text-tertiary);
  text-transform: uppercase;
  margin: 0;
}

.statsGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-4);
}

.statCard {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  padding-block: var(--space-6);
  padding-inline: var(--space-6);
  background-color: var(--color-bg-secondary);
  border: var(--border-width-thick) solid var(--color-border-strong);
  border-radius: var(--radius-none);
  box-shadow: var(--shadow-hard);
}

.statValue {
  font-family: var(--font-family-anton);
  font-size: var(--font-size-4xl);
  letter-spacing: var(--letter-spacing-tight);
  color: var(--color-text-primary);
}

.statLabel {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-sm);
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-secondary);
  text-transform: uppercase;
}

.quickActions {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.sectionTitle {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-xl);
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-primary);
  margin: 0;
}

.actionsGrid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: var(--space-4);
}

.actionCard {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  padding-block: var(--space-8);
  padding-inline: var(--space-6);
  background-color: var(--color-bg-primary);
  border: var(--border-width-thick) solid var(--color-border-strong);
  border-radius: var(--radius-none);
  box-shadow: var(--shadow-hard);
  text-decoration: none;
  transition: all var(--duration-fast) var(--easing-out);
  cursor: pointer;
}

.actionCard:hover {
  background-color: var(--color-bg-secondary);
  transform: translate(-2px, -2px);
  box-shadow: var(--shadow-hard-lg);
}

.actionCard:active {
  transform: translate(0, 0);
  box-shadow: var(--shadow-hard);
}

.actionIcon {
  font-family: var(--font-family-anton);
  font-size: var(--font-size-3xl);
  color: var(--color-text-primary);
}

.actionLabel {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-base);
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-secondary);
  text-transform: uppercase;
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-4);
  padding-block: var(--space-12);
  padding-inline: var(--space-8);
}

.emptyText {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-xl);
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-tertiary);
  text-transform: uppercase;
}

@media (max-width: 48rem) {
  .container {
    padding-block: var(--space-6);
    padding-inline: var(--space-4);
  }

  .welcomeTitle {
    font-size: var(--font-size-2xl);
  }

  .statsGrid,
  .actionsGrid {
    grid-template-columns: 1fr;
  }
}
