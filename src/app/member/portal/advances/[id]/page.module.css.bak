/* Advance Detail Page - Design System Compliant */
.container {
  min-block-size: 100vh;
  background-color: var(--color-white);
}

/* Loading State */
.row {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  min-block-size: 400px;
}

.spinner {
  inline-size: var(--space-12);
  block-size: var(--space-12);
  border: 4px solid var(--color-black);
  border-block-start-color: transparent;
  border-radius: var(--radius-none);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* Header Section */
.headerSection {
  border-block-end: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
}

.headerContainer {
  max-width: 1280px;
  margin-inline: auto;
  padding-inline: var(--space-4);
  padding-block: var(--space-6);
}

.backLink {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
  font-family: var(--font-family-heading);
  text-transform: uppercase;
  color: var(--color-black);
  transition: color var(--duration-fast) var(--easing-out);
}

.backLink:hover {
  color: var(--color-grey-600);
}

.icon {
  inline-size: var(--space-5);
  block-size: var(--space-5);
}

.headerContent {
  margin-block-start: var(--space-4);
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

@media (min-width: 640px) {
  .headerContent {
    flex-direction: row;
    align-items: flex-start;
    justify-content: space-between;
  }
}

.headerInfo {
  flex: 1;
}

.pageTitle {
  font-family: var(--font-family-display);
  font-size: var(--font-size-3xl);
  text-transform: uppercase;
}

.advanceNumber {
  margin-block-start: var(--space-2);
  font-family: var(--font-family-mono);
  font-size: var(--font-size-sm);
  color: var(--color-grey-600);
}

/* Timeline Section */
.timelineSection {
  border-block-end: var(--border-width-2) solid var(--color-grey-200);
  background-color: var(--color-grey-50);
}

.timelineContainer {
  max-width: 1280px;
  margin-inline: auto;
  padding-inline: var(--space-4);
  padding-block: var(--space-8);
}

.header {
  display: flex;
  align-items: center;
  gap: var(--space-4);
}

.timelineStep {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
}

.stepCircle {
  display: flex;
  inline-size: var(--space-12);
  block-size: var(--space-12);
  align-items: center;
  justify-content: center;
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-family-heading);
  font-size: var(--font-size-lg);
}

.stepCircleCompleted {
  border-color: var(--color-black);
  background-color: var(--color-black);
  color: var(--color-white);
}

.stepCircleActive {
  border-color: var(--color-black);
  background-color: var(--color-white);
  color: var(--color-black);
}

.stepCircleInactive {
  border-color: var(--color-grey-400);
  background-color: var(--color-grey-200);
  color: var(--color-grey-600);
}

.stepLabel {
  margin-block-start: var(--space-2);
  text-align: center;
  font-family: var(--font-family-heading);
  font-size: var(--font-size-sm);
  text-transform: uppercase;
}

.stepLabelActive {
  color: var(--color-black);
}

.stepLabelInactive {
  color: var(--color-grey-600);
}

.stepTime {
  margin-block-start: var(--space-1);
  text-align: center;
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  color: var(--color-grey-600);
}

.stepConnector {
  block-size: 2px;
  flex: 1;
}

.stepConnectorCompleted {
  background-color: var(--color-black);
}

.stepConnectorInactive {
  background-color: var(--color-grey-300);
}

/* Main Content */
.mainContainer {
  max-width: 1280px;
  margin-inline: auto;
  padding-inline: var(--space-4);
  padding-block: var(--space-8);
}

.grid {
  display: grid;
  gap: var(--space-6);
}

@media (min-width: 64rem) {
  .grid {
    grid-template-columns: 2fr 1fr;
  }
}

.mainColumn {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

@media (min-width: 64rem) {
  .mainColumn {
    grid-column: span 2;
  }
}

.section {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

/* Cards */
.card {
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
  padding: var(--space-6);
}

.cardTitle {
  margin-block-end: var(--space-6);
  font-family: var(--font-family-heading);
  font-size: var(--font-size-2xl);
  text-transform: uppercase;
}

.infoGrid {
  display: grid;
  gap: var(--space-4);
}

@media (min-width: 640px) {
  .infoGrid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.infoLabel {
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  text-transform: uppercase;
  color: var(--color-grey-600);
}

.infoValue {
  font-family: var(--font-family-mono);
  color: var(--color-black);
}

/* Notes Section */
.notesSection {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.noteItem {
  display: flex;
  flex-direction: column;
}

.noteTitle {
  font-family: var(--font-family-heading);
  text-transform: uppercase;
  color: var(--color-black);
}

.noteText {
  margin-block-start: var(--space-2);
  font-family: var(--font-family-body);
  font-size: var(--font-size-sm);
}

/* Items List */
.itemsList {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.itemRow {
  display: flex;
  align-items: flex-start;
  gap: var(--space-4);
  padding-block-end: var(--space-4);
  border-block-end: var(--border-width-2) solid var(--color-grey-200);
}

.itemRow:last-child {
  border-block-end: none;
  padding-block-end: 0;
}

.itemContent {
  flex: 1;
}

.itemHeader {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.itemName {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-lg);
  text-transform: uppercase;
}

.itemMeta {
  margin-block-start: var(--space-1);
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  color: var(--color-grey-600);
}

.itemQuantity {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-lg);
}

.itemModifiers {
  margin-block-start: var(--space-2);
  font-family: var(--font-family-body);
  font-size: var(--font-size-xs);
  color: var(--color-grey-600);
}

.itemNotes {
  margin-block-start: var(--space-2);
  font-family: var(--font-family-body);
  font-size: var(--font-size-xs);
  font-style: italic;
  color: var(--color-grey-600);
}

.itemStatus {
  margin-block-start: var(--space-2);
}

.itemsTotal {
  margin-block-start: var(--space-6);
  border-block-start: var(--border-width-2) solid var(--color-grey-200);
  padding-block-start: var(--space-4);
}

.itemsTotalText {
  font-family: var(--font-family-heading);
  text-transform: uppercase;
  color: var(--color-black);
}

/* Rejection Notice */
.rejectionCard {
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
  padding: var(--space-6);
}

.rejectionTitle {
  margin-block-end: var(--space-4);
  font-family: var(--font-family-heading);
  font-size: var(--font-size-2xl);
  text-transform: uppercase;
  color: var(--color-black);
}

.rejectionText {
  font-family: var(--font-family-mono);
  color: var(--color-grey-600);
}

/* Comments */
.commentsEmpty {
  padding-block: var(--space-8);
  text-align: center;
  font-family: var(--font-family-body);
  font-size: var(--font-size-sm);
  color: var(--color-grey-600);
}

.commentsList {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.commentItem {
  border-block-end: var(--border-width-2) solid var(--color-grey-200);
  padding-block-end: var(--space-4);
}

.commentItem:last-child {
  border-block-end: none;
  padding-block-end: 0;
}

.commentHeader {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.commentAuthor {
  font-family: var(--font-family-mono);
  font-weight: var(--font-weight-semibold);
}

.commentTime {
  font-family: var(--font-family-mono);
  font-size: var(--font-size-xs);
  color: var(--color-grey-600);
}

.commentText {
  margin-block-start: var(--space-2);
  font-family: var(--font-family-body);
  font-size: var(--font-size-sm);
}

.commentForm {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  margin-block-start: var(--space-6);
}

.textarea {
  inline-size: 100%;
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
  padding-inline: var(--space-4);
  padding-block: var(--space-3);
  font-family: var(--font-family-body);
  font-size: var(--font-size-sm);
  outline: none;
  transition: border-color var(--duration-fast) var(--easing-out);
}

.textarea:focus {
  border-color: var(--color-grey-800);
}

/* Buttons */
.buttonPrimary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-black);
  color: var(--color-white);
  padding-inline: var(--space-6);
  padding-block: var(--space-3);
  font-family: var(--font-family-heading);
  text-transform: uppercase;
  cursor: pointer;
  transition: all var(--duration-fast) var(--easing-out);
}

.buttonPrimary:hover:not(:disabled) {
  background-color: var(--color-white);
  color: var(--color-black);
}

.buttonPrimary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.buttonSecondary {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-2);
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
  color: var(--color-black);
  padding-inline: var(--space-6);
  padding-block: var(--space-3);
  font-family: var(--font-family-heading);
  text-transform: uppercase;
  cursor: pointer;
  transition: all var(--duration-fast) var(--easing-out);
}

.buttonSecondary:hover:not(:disabled) {
  background-color: var(--color-grey-50);
}

.buttonSecondary:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Sidebar */
.sidebarCard {
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-grey-50);
  padding: var(--space-6);
}

.sidebarTitle {
  margin-block-end: var(--space-4);
  font-family: var(--font-family-heading);
  font-size: var(--font-size-xl);
  text-transform: uppercase;
}

.sidebarSection {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
}

/* Error/Empty States */
.emptyState {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: var(--space-4);
  min-block-size: 400px;
}

.emptyIcon {
  margin-block-end: var(--space-4);
  color: var(--color-grey-400);
}

.emptyText {
  font-family: var(--font-family-mono);
  color: var(--color-grey-600);
}

.emptyButton {
  margin-block-start: var(--space-4);
  border: var(--border-width-3) solid var(--color-black);
  background-color: var(--color-white);
  padding-inline: var(--space-6);
  padding-block: var(--space-3);
  font-family: var(--font-family-heading);
  text-transform: uppercase;
  transition: all var(--duration-fast) var(--easing-out);
  cursor: pointer;
}

.emptyButton:hover {
  background-color: var(--color-black);
  color: var(--color-white);
}


.bgBlack {
  background-color: var(--color-black);
}

.bgWhite {
  background-color: var(--color-white);
}

.borderBlack {
  border-color: var(--color-black);
}

.emptyIcon {
  inline-size: var(--space-16);
  block-size: var(--space-16);
  margin-inline: auto;
  color: var(--color-grey-600);
  margin-block-end: var(--space-4);
}

.textGrey600 {
  color: var(--color-grey-600);
}

.textGrey700 {
  color: var(--color-grey-700);
}

.textBlack {
  color: var(--color-black);
}

.textWhite {
  color: var(--color-white);
}

.flexCenter {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flexBetween {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gap2 {
  gap: var(--space-2);
}

.gap4 {
  gap: var(--space-4);
}


.fullWidth {
  inline-size: 100%;
}

.fullHeight {
  block-size: 100%;
}

.marginBottom {
  margin-block-end: var(--space-4);
}

.marginTop {
  margin-block-start: var(--space-4);
}

.textSmall {
  font-size: var(--font-size-sm);
}

.textLarge {
  font-size: var(--font-size-lg);
}

.fontBold {
  font-weight: var(--font-weight-semibold);
}

.fontMedium {
  font-weight: var(--font-weight-medium);
}

.uppercase {
  text-transform: uppercase;
}

.rounded {
  border-radius: var(--radius-none)(--radius-md);
}

.shadow {
  box-shadow: var(--shadow-lg);
}
