.container {
  min-height: 100vh;
  background-color: var(--color-white);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--space-4);
}

.card {
  width: 100%;
  max-width: 600px;
  background-color: var(--color-white);
  border: var(--border-width-3) solid var(--color-black);
  padding: var(--space-8);
}

.header {
  text-align: center;
  margin-block-end: var(--space-8);
}

.title {
  font-family: var(--font-anton);
  font-size: var(--font-size-3xl);
  font-weight: var(--font-weight-bold);
  text-transform: uppercase;
  color: var(--color-black);
  margin-block-end: var(--space-2);
}

.subtitle {
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  color: var(--color-grey-600);
}

.form {
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
}

.fieldGroup {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.label {
  font-family: var(--font-bebas);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-normal);
  text-transform: uppercase;
  color: var(--color-black);
}

.input {
  width: 100%;
  padding: var(--space-3);
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  transition: border-color var(--duration-fast) var(--easing-out);
}

.input:focus {
  outline: var(--border-width-2) solid var(--color-black);
  outline-offset: 0.125rem;
}

.select {
  width: 100%;
  padding: var(--space-3);
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  transition: border-color var(--duration-fast) var(--easing-out);
}

.select:focus {
  outline: var(--border-width-2) solid var(--color-black);
  outline-offset: 0.125rem;
}

.textarea {
  width: 100%;
  padding: var(--space-3);
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  transition: border-color var(--duration-fast) var(--easing-out);
  min-height: 120px;
  resize: vertical;
}

.textarea:focus {
  outline: var(--border-width-2) solid var(--color-black);
  outline-offset: 0.125rem;
}

.button {
  width: 100%;
  padding: var(--space-4);
  background-color: var(--color-black);
  color: var(--color-white);
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-bebas);
  font-size: var(--font-size-base);
  text-transform: uppercase;
  font-weight: var(--font-weight-normal);
  cursor: pointer;
  transition: background-color var(--duration-fast) var(--easing-out);
}

.button:hover:not(:disabled) {
  background-color: var(--color-grey-800);
}

.button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.progress {
  display: flex;
  gap: var(--space-2);
  margin-block-end: var(--space-6);
}

.progressStep {
  flex: 1;
  height: 4px;
  background-color: var(--color-grey-200);
}

.progressStepActive {
  flex: 1;
  height: 4px;
  background-color: var(--color-black);
}

.row {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.grid {
  display: grid;
  gap: var(--space-4);
  grid-template-columns: 1fr;
}

@media (min-width: 640px) {
  .grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

.textCenter {
  text-align: center;
}

.maxWidthMd {
  max-width: 28rem;
}

.emoji {
  font-size: var(--font-size-6xl);
  margin-block-end: var(--space-6);
  text-align: center;
}

.cardBlack {
  background-color: var(--color-black);
  border: var(--border-width-3) solid var(--color-black);
  padding: var(--space-6);
}

.cardGrey {
  background-color: var(--color-grey-100);
  border: var(--border-width-3) solid var(--color-black);
  padding: var(--space-4);
}

.cardOrange {
  background-color: var(--color-grey-100);
  border: var(--border-width-3) solid var(--color-black);
  padding: var(--space-4);
}

.cardBorder {
  border: var(--border-width-3) solid var(--color-grey-200);
  padding: var(--space-4);
  transition: border-color var(--duration-fast) var(--easing-out);
}

.cardBorder:hover {
  border-color: var(--color-black);
}

.cardTitle {
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--color-grey-600);
  margin-block-end: var(--space-4);
}

.cardTitleBlack {
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--color-black);
  margin-block-end: var(--space-2);
}

.cardTitleOrange {
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-semibold);
  color: var(--color-black);
}

.cardText {
  font-family: var(--font-share);
  font-size: var(--font-size-sm);
  color: var(--color-grey-600);
  margin-block-end: var(--space-3);
}

.cardTextBlack {
  font-family: var(--font-share);
  font-size: var(--font-size-sm);
  color: var(--color-black);
}

.roleContainer {
  display: flex;
  flex-wrap: wrap;
  gap: var(--space-3);
  margin-block-end: var(--space-6);
}

.list {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
  font-family: var(--font-share);
  font-size: var(--font-size-sm);
  color: var(--color-black);
}

.link {
  text-decoration: underline;
  font-weight: var(--font-weight-medium);
  color: var(--color-black);
}

.link:hover {
  opacity: 0.8;
}

.textXl {
  font-family: var(--font-share);
  font-size: var(--font-size-xl);
  color: var(--color-grey-600);
  margin-block-end: var(--space-8);
}

.navButtons {
  display: flex;
  justify-content: space-between;
  margin-block-start: var(--space-12);
}

.buttonPrevious {
  padding-inline: var(--space-6);
  padding-block: var(--space-3);
  border: var(--border-width-3) solid var(--color-grey-300);
  color: var(--color-grey-600);
  background-color: var(--color-white);
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  cursor: pointer;
  transition: background-color var(--duration-fast) var(--easing-out);
}

.buttonPrevious:hover:not(:disabled) {
  background-color: var(--color-grey-100);
}

.buttonPrevious:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.buttonNext {
  padding-inline: var(--space-8);
  padding-block: var(--space-3);
  background-color: var(--color-black);
  color: var(--color-white);
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-share);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-medium);
  cursor: pointer;
  transition: background-color var(--duration-fast) var(--easing-out);
}

.buttonNext:hover {
  background-color: var(--color-grey-800);
}

.iconEmoji {
  font-size: var(--font-size-2xl);
}


.bgBlack {
  background-color: var(--color-black);
}

.bgWhite {
  background-color: var(--color-white);
}

.borderBlack {
  border-color: var(--color-black);
}

.emptyIcon {
  inline-size: var(--space-16);
  block-size: var(--space-16);
  margin-inline: auto;
  color: var(--color-grey-600);
  margin-block-end: var(--space-4);
}

.textGrey600 {
  color: var(--color-grey-600);
}

.textGrey700 {
  color: var(--color-grey-700);
}

.textBlack {
  color: var(--color-black);
}

.textWhite {
  color: var(--color-white);
}

.flexCenter {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flexBetween {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gap2 {
  gap: var(--space-2);
}

.gap4 {
  gap: var(--space-4);
}


.fullWidth {
  inline-size: 100%;
}

.fullHeight {
  block-size: 100%;
}

.marginBottom {
  margin-block-end: var(--space-4);
}

.marginTop {
  margin-block-start: var(--space-4);
}

.textSmall {
  font-size: var(--font-size-sm);
}

.textLarge {
  font-size: var(--font-size-lg);
}

.fontBold {
  font-weight: var(--font-weight-semibold);
}

.fontMedium {
  font-weight: var(--font-weight-medium);
}

.uppercase {
  text-transform: uppercase;
}

.rounded {
  border-radius: var(--radius-none)(--radius-md);
}

.shadow {
  box-shadow: var(--shadow-lg);
}
