/* Page - Design System Compliant */

.container {
  min-block-size: 100vh;
  background-color: var(--color-white);
}

.loadingContainer {
  display: flex;
  align-items: center;
  justify-content: center;
  min-block-size: 50vh;
}

.spinner {
  inline-size: var(--space-12);
  block-size: var(--space-12);
  animation: spin 1s linear infinite;
  color: var(--color-black);
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.header {
  border-block-end: var(--border-width-3) solid var(--color-black);
  padding-block: var(--space-12);
}

.title {
  font-family: var(--font-anton);
  font-size: var(--font-size-hero);
  text-transform: uppercase;
  color: var(--color-black);
}

.subtitle {
  font-family: var(--font-share-tech);
  color: var(--color-grey-700);
}

.content {
  max-inline-size: 1280px;
  margin-inline: auto;
  padding-inline: var(--space-4);
  padding-block: var(--space-8);
}

.section {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
}

.row {
  display: flex;
  align-items: center;
  gap: var(--space-2);
}

.grid {
  display: grid;
  gap: var(--space-6);
}

.card {
  border: var(--border-width-3) solid var(--color-black);
  padding: var(--space-6);
  background-color: var(--color-white);
}

.icon {
  inline-size: var(--space-4);
  block-size: var(--space-4);
}

.button {
  padding: var(--space-3) var(--space-6);
  border: var(--border-width-3) solid var(--color-black);
  font-family: var(--font-bebas);
  text-transform: uppercase;
  cursor: pointer;
}

.buttonPrimary {
  background-color: var(--color-black);
  color: var(--color-white);
}

.input {
  inline-size: 100%;
  padding: var(--space-3);
  border: var(--border-width-3) solid var(--color-black);
}

.label {
  font-family: var(--font-bebas);
  text-transform: uppercase;
  margin-block-end: var(--space-2);
}

.emptyState {
  text-align: center;
  padding-block: var(--space-12);
}

.emptyText {
  font-family: var(--font-share-tech);
  color: var(--color-grey-600);
}


.bgBlack {
  background-color: var(--color-black);
}

.bgWhite {
  background-color: var(--color-white);
}

.borderBlack {
  border-color: var(--color-black);
}

.emptyIcon {
  inline-size: var(--space-16);
  block-size: var(--space-16);
  margin-inline: auto;
  color: var(--color-grey-600);
  margin-block-end: var(--space-4);
}

.textGrey600 {
  color: var(--color-grey-600);
}

.textGrey700 {
  color: var(--color-grey-700);
}

.textBlack {
  color: var(--color-black);
}

.textWhite {
  color: var(--color-white);
}

.flexCenter {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flexBetween {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gap2 {
  gap: var(--space-2);
}

.gap4 {
  gap: var(--space-4);
}


.fullWidth {
  inline-size: 100%;
}

.fullHeight {
  block-size: 100%;
}

.marginBottom {
  margin-block-end: var(--space-4);
}

.marginTop {
  margin-block-start: var(--space-4);
}

.textSmall {
  font-size: var(--font-size-sm);
}

.textLarge {
  font-size: var(--font-size-lg);
}

.fontBold {
  font-weight: var(--font-weight-semibold);
}

.fontMedium {
  font-weight: var(--font-weight-medium);
}

.uppercase {
  text-transform: uppercase;
}

.rounded {
  border-radius: var(--radius-none)(--radius-md);
}

.shadow {
  box-shadow: var(--shadow-lg);
}

.statusIndicator {
  width: 12px;
  height: 12px;
  border-radius: var(--radius-none)(--radius-full);
}

.statusOnline {
  background-color: var(--color-success);
}

.statusOffline {
  background-color: var(--color-grey-400);
}

.scanHistoryItem {
  padding: var(--space-3);
  border: var(--border-width-2) solid var(--color-black);
}

.scanSuccess {
  background-color: var(--color-success-bg);
  border-color: var(--color-success);
}

.scanError {
  background-color: var(--color-error-bg);
  border-color: var(--color-error);
}
