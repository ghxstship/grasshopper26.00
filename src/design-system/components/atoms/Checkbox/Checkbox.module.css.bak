/**
 * Checkbox Styles
 * GHXSTSHIP Entertainment Platform
 * Bold outlined checkboxes, geometric check icons
 */

.container {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.checkboxWrapper {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

/* ========================================
   CHECKBOX INPUT
   ======================================== */

.checkbox {
  position: relative;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  
  width: 24px;
  height: 24px;
  flex-shrink: 0;
  
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none)(--radius-none);
  background-color: var(--color-bg-primary);
  
  cursor: pointer;
  
  transition: all var(--duration-fast) var(--easing-out);
}

.checkbox:hover:not(:disabled) {
  border-color: var(--color-primary);
  background-color: var(--color-bg-secondary);
}

.checkbox:focus-visible {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

.checkbox:checked {
  background-color: var(--color-black);
  border-color: var(--color-primary);
}

.checkbox:checked::after {
  content: '';
  position: absolute;
  inset-block-start: 50%;
  inset-inline-start: 50%;
  transform: translate(-50%, -50%);
  
  width: 12px;
  height: 12px;
  
  background-color: var(--color-accent);
  
  clip-path: polygon(
    14% 44%,
    0 65%,
    50% 100%,
    100% 16%,
    80% 0%,
    43% 62%
  );
}

.checkbox:disabled {
  opacity: var(--opacity-50);
  cursor: not-allowed;
}

.checkbox.error {
  border-color: var(--color-error-border);
}

/* ========================================
   SIZES
   ======================================== */

.sm {
  width: 20px;
  height: 20px;
}

.sm:checked::after {
  width: 10px;
  height: 10px;
}

.md {
  width: 24px;
  height: 24px;
}

.md:checked::after {
  width: 12px;
  height: 12px;
}

.lg {
  width: 28px;
  height: 28px;
}

.lg:checked::after {
  width: 14px;
  height: 14px;
}

/* ========================================
   LABEL
   ======================================== */

.label {
  font-family: var(--font-body);
  font-size: var(--font-size-base);
  line-height: var(--line-height-normal);
  
  color: var(--color-text-primary);
  cursor: pointer;
  
  user-select: none;
}

.checkbox:disabled + .label {
  opacity: var(--opacity-50);
  cursor: not-allowed;
}

/* ========================================
   HELPER & ERROR TEXT
   ======================================== */

.helperText {
  font-family: var(--font-body);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  
  color: var(--color-text-secondary);
  
  margin-inline-start: calc(24px + var(--space-3));
}

.errorText {
  font-family: var(--font-body);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  
  color: var(--color-error-text);
  
  margin-inline-start: calc(24px + var(--space-3));
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .checkbox {
    transition: none;
  }
}

@media (prefers-contrast: high) {
  .checkbox {
    border-width: var(--border-width-4);
  }
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .checkbox,
[data-theme="dark"] .checkbox {
  border-color: var(--color-border-strong);
  background-color: var(--color-bg-primary);
}

.dark .checkbox:checked,
[data-theme="dark"] .checkbox:checked {
  background-color: var(--color-accent);
  border-color: var(--color-accent);
}

.dark .checkbox:checked::after,
[data-theme="dark"] .checkbox:checked::after {
  background-color: var(--color-black);
}
