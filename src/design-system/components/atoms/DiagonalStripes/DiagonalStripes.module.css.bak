/**
 * DiagonalStripes Component Styles
 * GHXSTSHIP Monochromatic Design System
 * Bold diagonal stripe patterns for texture
 */

.stripes {
  position: relative;
  --stripes-opacity: 0.1;
}

.stripes::before {
  content: '';
  position: absolute;
  inset: 0;
  opacity: var(--stripes-opacity);
  pointer-events: none;
}

/* Direction variants */
.diagonal-right::before {
  background: repeating-linear-gradient(
    45deg,
    var(--stripe-color),
    var(--stripe-color) var(--stripe-width),
    transparent var(--stripe-width),
    transparent calc(var(--stripe-width) * 2)
  );
}

.diagonal-left::before {
  background: repeating-linear-gradient(
    -45deg,
    var(--stripe-color),
    var(--stripe-color) var(--stripe-width),
    transparent var(--stripe-width),
    transparent calc(var(--stripe-width) * 2)
  );
}

.vertical::before {
  background: repeating-linear-gradient(
    90deg,
    var(--stripe-color),
    var(--stripe-color) var(--stripe-width),
    transparent var(--stripe-width),
    transparent calc(var(--stripe-width) * 2)
  );
}

.horizontal::before {
  background: repeating-linear-gradient(
    0deg,
    var(--stripe-color),
    var(--stripe-color) var(--stripe-width),
    transparent var(--stripe-width),
    transparent calc(var(--stripe-width) * 2)
  );
}

/* Width variants */
.thin {
  --stripe-width: 2px;
}

.medium {
  --stripe-width: 4px;
}

.thick {
  --stripe-width: 8px;
}

/* Color variants */
.black {
  --stripe-color: var(--color-black);
}

.white {
  --stripe-color: var(--color-white);
}

.grey {
  --stripe-color: var(--color-grey-500);
}
