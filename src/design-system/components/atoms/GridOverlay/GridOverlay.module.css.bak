/**
 * GridOverlay Component Styles
 * GHXSTSHIP Monochromatic Design System
 * Structural grid system for layout
 */

.gridOverlay {
  position: relative;
  --grid-opacity: 0.05;
}

.gridOverlay::before {
  content: '';
  position: absolute;
  inset: 0;
  opacity: var(--grid-opacity);
  pointer-events: none;
  background-image:
    linear-gradient(var(--grid-color) 1px, transparent 1px),
    linear-gradient(90deg, var(--grid-color) 1px, transparent 1px);
  background-size: var(--grid-size) var(--grid-size);
}

/* Size variants */
.small {
  --grid-size: 16px;
}

.medium {
  --grid-size: 32px;
}

.large {
  --grid-size: 64px;
}

/* Color variants */
.black {
  --grid-color: var(--color-black);
}

.white {
  --grid-color: var(--color-white);
}

.grey {
  --grid-color: var(--color-grey-500);
}
