/**
 * Link Styles
 * GHXSTSHIP Entertainment Platform
 * Thick underline hover effects, geometric styling
 */

.link {
  position: relative;
  display: inline-flex;
  align-items: center;
  gap: var(--space-1);
  
  font-family: var(--font-body);
  font-size: var(--font-size-base);
  font-weight: var(--font-weight-normal);
  text-decoration: none;
  
  color: var(--color-text-primary);
  
  transition: color var(--duration-fast) var(--easing-out);
}

.link:hover {
  color: var(--color-text-brand);
}

.link:focus-visible {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

/* ========================================
   VARIANTS
   ======================================== */

.default {
  text-decoration: underline;
  text-decoration-thickness: 1px;
  text-underline-offset: 2px;
}

.default:hover {
  text-decoration-thickness: 2px;
}

.nav {
  font-family: var(--font-heading);
  font-weight: var(--font-weight-normal);
  letter-spacing: var(--letter-spacing-wider);
  text-transform: uppercase;
  text-decoration: none;
  
  padding-block: var(--space-2);
}

.nav::after {
  content: '';
  position: absolute;
  inset-block-end: 0;
  inset-inline-start: 0;
  inset-inline-end: 0;
  
  height: var(--border-width-3);
  background-color: currentColor;
  
  transform: scaleX(0);
  transform-origin: center;
  
  transition: transform var(--duration-base) var(--easing-out);
}

.nav:hover::after {
  transform: scaleX(1);
}

.underline {
  text-decoration: none;
  border-block-end: var(--border-width-2) solid transparent;
}

.underline:hover {
  border-block-end-color: currentColor;
}

.button {
  font-family: var(--font-heading);
  font-weight: var(--font-weight-bold);
  letter-spacing: var(--letter-spacing-wider);
  text-transform: uppercase;
  text-decoration: none;
  
  padding-inline: var(--space-6);
  padding-block: var(--space-3);
  
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none)(--radius-none);
  background-color: transparent;
  
  min-height: 48px;
  
  transition: all var(--duration-fast) var(--easing-out);
}

.button:hover {
  background-color: var(--color-black);
  color: var(--color-white);
  transform: scale(1.05);
}

.button:active {
  transform: scale(0.98);
}

/* ========================================
   SIZES
   ======================================== */

.sm {
  font-size: var(--font-size-sm);
}

.sm.button {
  min-height: 40px;
  padding-inline: var(--space-4);
  padding-block: var(--space-2);
}

.md {
  font-size: var(--font-size-base);
}

.md.button {
  min-height: 48px;
  padding-inline: var(--space-6);
  padding-block: var(--space-3);
}

.lg {
  font-size: var(--font-size-lg);
}

.lg.button {
  min-height: 56px;
  padding-inline: var(--space-8);
  padding-block: var(--space-4);
}

/* ========================================
   EXTERNAL ICON
   ======================================== */

.externalIcon {
  font-size: 0.85em;
  margin-inline-start: var(--space-1);
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .link,
  .nav::after,
  .button {
    transition: none;
  }
}

@media (prefers-contrast: high) {
  .link {
    text-decoration-thickness: 2px;
  }
  
  .button {
    border-width: var(--border-width-4);
  }
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .link,
[data-theme="dark"] .link {
  color: var(--color-text-primary);
}

.dark .link:hover,
[data-theme="dark"] .link:hover {
  color: var(--color-text-brand);
}

.dark .button,
[data-theme="dark"] .button {
  border-color: var(--color-border-strong);
}

.dark .button:hover,
[data-theme="dark"] .button:hover {
  background-color: var(--color-accent);
  color: var(--color-primary);
}
