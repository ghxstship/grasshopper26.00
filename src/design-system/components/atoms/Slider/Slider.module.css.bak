/**
 * Slider Styles
 * GHXSTSHIP Entertainment Platform
 * Geometric slider with hard edges
 */

.container {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  width: 100%;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.label {
  font-family: var(--font-heading);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-normal);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  color: var(--color-text-primary);
}

.value {
  font-family: var(--font-mono);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-secondary);
}

/* ========================================
   TRACK
   ======================================== */

.track {
  position: relative;
  width: 100%;
  height: 12px;
  
  background-color: var(--color-bg-secondary);
  border: var(--border-width-2) solid var(--color-border-default);
  border-radius: var(--radius-none)(--radius-none);
}

.fill,
.range {
  position: absolute;
  inset-block-start: 0;
  inset-block-end: 0;
  inset-inline-start: 0;
  
  background-color: var(--color-black);
  border-radius: var(--radius-none)(--radius-none);
  
  pointer-events: none;
}

.range {
  inset-inline-start: auto;
}

/* ========================================
   INPUT
   ======================================== */

.input {
  position: absolute;
  inset: 0;
  
  width: 100%;
  height: 100%;
  
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  
  background: transparent;
  cursor: pointer;
  
  margin: 0;
  padding: 0;
}

.input::-webkit-slider-thumb {
  appearance: none;
  -webkit-appearance: none;
  
  width: 20px;
  height: 20px;
  
  background-color: var(--color-black);
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none)(--radius-none);
  
  cursor: pointer;
  
  transition: all var(--duration-fast) var(--easing-out);
}

.input::-moz-range-thumb {
  width: 20px;
  height: 20px;
  
  background-color: var(--color-black);
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none)(--radius-none);
  
  cursor: pointer;
  
  transition: all var(--duration-fast) var(--easing-out);
}

.input::-webkit-slider-thumb:hover {
  transform: scale(1.2);
  box-shadow: var(--shadow-md);
}

.input::-moz-range-thumb:hover {
  transform: scale(1.2);
  box-shadow: var(--shadow-md);
}

.input:focus-visible {
  outline: none;
}

.input:focus-visible::-webkit-slider-thumb {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

.input:focus-visible::-moz-range-thumb {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

.input:disabled {
  cursor: not-allowed;
}

.input:disabled::-webkit-slider-thumb {
  opacity: var(--opacity-50);
  cursor: not-allowed;
}

.input:disabled::-moz-range-thumb {
  opacity: var(--opacity-50);
  cursor: not-allowed;
}

.disabled {
  opacity: var(--opacity-50);
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .input::-webkit-slider-thumb,
  .input::-moz-range-thumb {
    transition: none;
  }
}

@media (prefers-contrast: high) {
  .track {
    border-width: var(--border-width-3);
  }
  
  .input::-webkit-slider-thumb,
  .input::-moz-range-thumb {
    border-width: var(--border-width-4);
  }
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .track,
[data-theme="dark"] .track {
  background-color: var(--color-bg-tertiary);
  border-color: var(--color-border-default);
}

.dark .fill,
.dark .range,
[data-theme="dark"] .fill,
[data-theme="dark"] .range {
  background-color: var(--color-accent);
}

.dark .input::-webkit-slider-thumb,
[data-theme="dark"] .input::-webkit-slider-thumb {
  background-color: var(--color-accent);
}

.dark .input::-moz-range-thumb,
[data-theme="dark"] .input::-moz-range-thumb {
  background-color: var(--color-accent);
}
