/**
 * Spinner Component Styles
 * GHXSTSHIP Monochromatic Design System
 */

.spinner {
  display: inline-block;
  position: relative;
}

.visuallyHidden {
  position: absolute;
  inline-size: 1px;
  block-size: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Square spinner */
.square {
  border: var(--border-width-thick) solid var(--color-grey-300);
  border-block-start-color: var(--color-black);
  animation: spin 0.8s linear infinite;
}

/* Triangle spinner */
.triangle::before {
  content: '';
  display: block;
  inline-size: 0;
  block-size: 0;
  border-style: solid;
  border-inline-start-width: calc(var(--spinner-size) / 2);
  border-inline-end-width: calc(var(--spinner-size) / 2);
  border-block-end-width: var(--spinner-size);
  border-block-start-width: 0;
  border-color: transparent transparent var(--color-black) transparent;
  animation: spin 0.8s linear infinite;
}

/* Bars spinner */
.bars {
  display: flex;
  gap: calc(var(--spinner-size) / 8);
}

.bars::before,
.bars::after {
  content: '';
  inline-size: calc(var(--spinner-size) / 4);
  block-size: var(--spinner-size);
  background-color: var(--color-black);
  animation: pulse 0.8s ease-in-out infinite;
}

.bars::after {
  animation-delay: 0.4s;
}

/* Size variants */
.sm {
  --spinner-size: 16px;
}

.md {
  --spinner-size: 24px;
}

.lg {
  --spinner-size: 32px;
}

.xl {
  --spinner-size: 48px;
}

.square.sm,
.square.md,
.square.lg,
.square.xl {
  inline-size: var(--spinner-size);
  block-size: var(--spinner-size);
}

@keyframes spin {
  to {
    transform: rotate(360deg);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scaleY(1);
  }
  50% {
    transform: scaleY(0.4);
  }
}
