/**
 * TicketStub Styles
 * GHXSTSHIP Entertainment Platform
 * Geometric ticket stub with perforated edge
 */

.stub {
  position: relative;
  display: flex;
  
  min-width: 280px;
  
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none);
  background-color: var(--color-bg-primary);
  
  overflow: hidden;
}

.perforation {
  position: absolute;
  inset-inline-start: 80px;
  inset-block: 0;
  
  width: 2px;
  
  background-image: repeating-linear-gradient(
    to bottom,
    var(--color-border-strong) 0,
    var(--color-border-strong) 4px,
    transparent 4px,
    transparent 8px
  );
}

.content {
  display: flex;
  flex-direction: column;
  gap: var(--space-3);
  
  padding: var(--space-4);
  padding-inline-start: calc(80px + var(--space-4));
  
  width: 100%;
}

.header {
  padding-block-end: var(--space-2);
  border-block-end: var(--border-width-2) solid var(--color-border-default);
}

.eventName {
  font-family: var(--font-heading);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  line-height: var(--line-height-tight);
  color: var(--color-text-primary);
}

.details {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.row {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: var(--space-4);
}

.label {
  font-family: var(--font-mono);
  font-size: var(--font-size-xs);
  font-weight: var(--font-weight-normal);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wider);
  color: var(--color-text-tertiary);
}

.value {
  font-family: var(--font-body);
  font-size: var(--font-size-sm);
  font-weight: var(--font-weight-medium);
  color: var(--color-text-primary);
  text-align: end;
}

/* ========================================
   VARIANTS
   ======================================== */

.vip {
  border-color: var(--color-primary);
  border-width: var(--border-width-4);
}

.vip .eventName {
  color: var(--color-primary);
}

.ga {
  border-style: dashed;
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .stub,
[data-theme="dark"] .stub {
  border-color: var(--color-border-strong);
  background-color: var(--color-bg-secondary);
}

.dark .vip,
[data-theme="dark"] .vip {
  border-color: var(--color-accent);
}

.dark .vip .eventName,
[data-theme="dark"] .vip .eventName {
  color: var(--color-accent);
}

.dark .perforation,
[data-theme="dark"] .perforation {
  background-image: repeating-linear-gradient(
    to bottom,
    var(--color-border-strong) 0,
    var(--color-border-strong) 4px,
    transparent 4px,
    transparent 8px
  );
}
