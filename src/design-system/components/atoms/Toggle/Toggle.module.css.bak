/**
 * Toggle Styles
 * GHXSTSHIP Entertainment Platform
 * Bold outlined toggle, geometric slider
 */

.container {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.toggleWrapper {
  display: flex;
  align-items: center;
  gap: var(--space-3);
}

/* ========================================
   TOGGLE INPUT
   ======================================== */

.toggle {
  position: relative;
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  
  width: 48px;
  height: 24px;
  flex-shrink: 0;
  
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none);
  background-color: var(--color-bg-secondary);
  
  cursor: pointer;
  
  transition: all var(--duration-fast) var(--easing-out);
}

.toggle::before {
  content: '';
  position: absolute;
  inset-block-start: 2px;
  inset-inline-start: 2px;
  
  width: 16px;
  height: 16px;
  
  background-color: var(--color-border-strong);
  border-radius: var(--radius-none);
  
  transition: all var(--duration-base) var(--easing-out);
}

.toggle:hover:not(:disabled) {
  border-color: var(--color-primary);
}

.toggle:focus-visible {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

.toggle:checked {
  background-color: var(--color-black);
  border-color: var(--color-primary);
}

.toggle:checked::before {
  inset-inline-start: calc(100% - 18px);
  background-color: var(--color-accent);
}

.toggle:disabled {
  opacity: var(--opacity-50);
  cursor: not-allowed;
}

.toggle.error {
  border-color: var(--color-error-border);
}

/* ========================================
   SIZES
   ======================================== */

.sm {
  width: 40px;
  height: 20px;
}

.sm::before {
  width: 14px;
  height: 14px;
}

.sm:checked::before {
  inset-inline-start: calc(100% - 16px);
}

.md {
  width: 48px;
  height: 24px;
}

.md::before {
  width: 16px;
  height: 16px;
}

.md:checked::before {
  inset-inline-start: calc(100% - 18px);
}

.lg {
  width: 56px;
  height: 28px;
}

.lg::before {
  width: 20px;
  height: 20px;
}

.lg:checked::before {
  inset-inline-start: calc(100% - 22px);
}

/* ========================================
   LABEL
   ======================================== */

.label {
  font-family: var(--font-body);
  font-size: var(--font-size-base);
  line-height: var(--line-height-normal);
  
  color: var(--color-text-primary);
  cursor: pointer;
  
  user-select: none;
}

.toggle:disabled + .label {
  opacity: var(--opacity-50);
  cursor: not-allowed;
}

/* ========================================
   HELPER & ERROR TEXT
   ======================================== */

.helperText {
  font-family: var(--font-body);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  
  color: var(--color-text-secondary);
  
  margin-inline-start: calc(48px + var(--space-3));
}

.errorText {
  font-family: var(--font-body);
  font-size: var(--font-size-sm);
  line-height: var(--line-height-normal);
  
  color: var(--color-error-text);
  
  margin-inline-start: calc(48px + var(--space-3));
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .toggle,
  .toggle::before {
    transition: none;
  }
}

@media (prefers-contrast: high) {
  .toggle {
    border-width: var(--border-width-4);
  }
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .toggle,
[data-theme="dark"] .toggle {
  border-color: var(--color-border-strong);
  background-color: var(--color-bg-secondary);
}

.dark .toggle:checked,
[data-theme="dark"] .toggle:checked {
  background-color: var(--color-accent);
  border-color: var(--color-accent);
}

.dark .toggle:checked::before,
[data-theme="dark"] .toggle:checked::before {
  background-color: var(--color-black);
}
