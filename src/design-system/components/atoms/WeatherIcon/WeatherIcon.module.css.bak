/**
 * WeatherIcon Styles
 * GHXSTSHIP Entertainment Platform
 * Geometric weather icons
 */

.container {
  display: inline-flex;
  align-items: center;
  gap: var(--space-2);
}

.icon {
  display: inline-flex;
  color: var(--color-text-primary);
}

.icon svg {
  width: 100%;
  height: 100%;
  display: block;
}

.temp {
  font-family: var(--font-mono);
  font-weight: var(--font-weight-bold);
  color: var(--color-text-secondary);
}

.sm .icon {
  width: 16px;
  height: 16px;
}

.sm .temp {
  font-size: var(--font-size-xs);
}

.md .icon {
  width: 24px;
  height: 24px;
}

.md .temp {
  font-size: var(--font-size-sm);
}

.lg .icon {
  width: 32px;
  height: 32px;
}

.lg .temp {
  font-size: var(--font-size-base);
}

.dark .icon,
[data-theme="dark"] .icon {
  color: var(--color-text-primary);
}
