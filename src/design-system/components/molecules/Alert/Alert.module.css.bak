/**
 * Alert Styles
 * GHXSTSHIP Entertainment Platform
 */

.alert {
  display: flex;
  gap: var(--space-4);
  
  padding: var(--space-4);
  
  border: var(--border-width-3) solid var(--color-border-strong);
  border-radius: var(--radius-none);
  
  box-shadow: var(--shadow-base);
}

/* ========================================
   ICON CONTAINER
   ======================================== */

.iconContainer {
  display: flex;
  align-items: flex-start;
  flex-shrink: 0;
}

.icon {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  
  width: 32px;
  height: 32px;
  
  border: var(--border-width-2) solid currentColor;
  border-radius: var(--radius-none);
  
  font-size: var(--font-size-lg);
  line-height: 1;
}

/* ========================================
   CONTENT
   ======================================== */

.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.title {
  font-family: var(--font-heading);
  font-size: var(--font-size-lg);
  font-weight: var(--font-weight-bold);
  letter-spacing: var(--letter-spacing-wider);
  text-transform: uppercase;
  line-height: var(--line-height-tight);
  
  margin: 0;
}

.message {
  font-family: var(--font-body);
  font-size: var(--font-size-base);
  line-height: var(--line-height-body);
  
  margin: 0;
}

/* ========================================
   CLOSE BUTTON
   ======================================== */

.closeButton {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  
  width: 24px;
  height: 24px;
  padding: 0;
  
  border: none;
  border-radius: var(--radius-none);
  background: none;
  
  cursor: pointer;
  
  transition: transform var(--duration-fast) var(--easing-out);
}

.closeButton:hover {
  transform: scale(1.2);
}

.closeButton:active {
  transform: scale(0.9);
}

.closeButton:focus-visible {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 0.125rem;
}

.closeIcon {
  font-size: var(--font-size-base);
  line-height: 1;
  color: currentColor;
}

/* ========================================
   VARIANTS
   ======================================== */

.info {
  background-color: var(--color-bg-secondary);
  border-color: var(--color-border-strong);
  color: var(--color-text-primary);
}

.success {
  background-color: var(--color-bg-primary);
  border-color: var(--color-border-strong);
  color: var(--color-text-primary);
}

.warning {
  background-color: var(--color-bg-secondary);
  border-color: var(--color-border-strong);
  color: var(--color-text-primary);
}

.error {
  background-color: var(--color-black);
  border-color: var(--color-border-strong);
  color: var(--color-white);
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .closeButton {
    transition: none;
  }
  
  .closeButton:hover {
    transform: none;
  }
}

@media (prefers-contrast: high) {
  .alert {
    border-width: var(--border-width-4);
  }
  
  .icon {
    border-width: var(--border-width-3);
  }
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .alert,
[data-theme="dark"] .alert {
  box-shadow: var(--shadow-white-md);
}

.dark .error,
[data-theme="dark"] .error {
  background-color: var(--color-accent);
  color: var(--color-primary);
}
