/**
 * AuthButtons - GHXSTSHIP Design System
 * ZERO TOLERANCE: All values use design tokens
 * Monochromatic auth button group
 */

.authButtons {
  display: flex;
  gap: var(--space-3);
  align-items: center;
}

.authButtons.horizontal {
  flex-direction: row;
}

.authButtons.vertical {
  flex-direction: column;
  inline-size: 100%;
}

.authButtons.vertical a {
  inline-size: 100%;
}

.authButtons.vertical button {
  inline-size: 100%;
}

/* Responsive adjustments */
@media (max-width: 767px) {
  .authButtons.horizontal {
    gap: var(--space-2);
  }
}
