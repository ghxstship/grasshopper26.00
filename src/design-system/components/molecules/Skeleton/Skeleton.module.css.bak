/**
 * Skeleton Styles
 * GHXSTSHIP Entertainment Platform
 */

.container {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.skeleton {
  background-color: var(--color-bg-tertiary);
  
  animation: pulse 1.5s cubic-bezier(0.4, 0, 0.6, 1) infinite;
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* ========================================
   VARIANTS
   ======================================== */

.text {
  width: 100%;
  height: 1em;
  border-radius: var(--radius-none);
}

.rect {
  width: 100%;
  height: 100px;
  border-radius: var(--radius-none);
}

.circle {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-none);
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .skeleton {
    animation: none;
  }
}
