.card {
  display: flex;
  flex-direction: column;
  gap: var(--space-4);
  padding-block: var(--space-6);
  padding-inline: var(--space-6);
  border-width: var(--border-width-thick);
  border-style: solid;
  border-color: var(--color-border-strong);
  background-color: var(--color-bg-primary);
  box-shadow: var(--shadow-md);
  transition: all var(--duration-fast) var(--easing-out);
}

.card:hover {
  transform: translateY(-2px);
  box-shadow: var(--shadow-lg);
}

.card.soldOut {
  opacity: var(--opacity-60);
  border-color: var(--color-border-default);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: var(--space-4);
  padding-block-end: var(--space-3);
  border-block-end: var(--border-width-default) solid var(--color-border-default);
}

.name {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-xl);
  letter-spacing: var(--letter-spacing-wide);
  line-height: var(--line-height-tight);
  color: var(--color-text-primary);
  margin-block: 0;
  flex: 1;
}

.price {
  display: flex;
  flex-direction: column;
  gap: var(--space-1);
}

.priceAmount {
  font-family: var(--font-family-anton);
  font-size: var(--font-size-3xl);
  line-height: var(--line-height-tight);
  color: var(--color-text-primary);
}

.priceBreakdown {
  font-family: var(--font-family-share-mono);
  font-size: var(--font-size-xs);
  letter-spacing: var(--letter-spacing-meta);
  color: var(--color-text-tertiary);
}

.availability {
  display: flex;
  flex-direction: column;
  gap: var(--space-2);
}

.availabilityBar {
  position: relative;
  block-size: 8px;
  background-color: var(--color-grey-200);
  border-width: var(--border-width-default);
  border-style: solid;
  border-color: var(--color-border-default);
  overflow: hidden;
}

.availabilityFill {
  position: absolute;
  inset-block-start: 0;
  inset-inline-start: 0;
  block-size: 100%;
  background-color: var(--color-grey-800);
  transition: width var(--duration-base) var(--easing-out);
}

.availabilityFill.low {
  background-color: var(--color-grey-900);
}

.availabilityText {
  display: flex;
  align-items: baseline;
  gap: var(--space-2);
  font-family: var(--font-family-share-mono);
  font-size: var(--font-size-sm);
  letter-spacing: var(--letter-spacing-meta);
}

.available {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-lg);
  color: var(--color-text-primary);
}

.separator {
  color: var(--color-text-tertiary);
}

.total {
  color: var(--color-text-secondary);
}

.label {
  color: var(--color-text-tertiary);
  text-transform: uppercase;
}

.soldOutText {
  font-family: var(--font-family-bebas);
  font-size: var(--font-size-lg);
  letter-spacing: var(--letter-spacing-wider);
  color: var(--color-text-secondary);
}
