/**
 * DataTable Styles
 * GHXSTSHIP Monochromatic Design System
 */

.container {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-3);
  border: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
}

.tableWrapper {
  overflow-x: auto;
}

.table {
  inline-size: 100%;
  border-collapse: collapse;
}

.thead {
  background-color: var(--color-black);
  color: var(--color-white);
}

.th {
  padding: var(--spacing-3) var(--spacing-4);
  text-align: start;
  font-family: var(--font-bebas);
  font-size: var(--font-size-h6);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
  border-inline-end: 1px solid var(--color-grey-700);
}

.th:last-child {
  border-inline-end: none;
}

.sortable {
  cursor: pointer;
  user-select: none;
}

.sortable:hover {
  background-color: var(--color-grey-900);
}

.thContent {
  display: flex;
  align-items: center;
  gap: var(--spacing-2);
}

.columnLabel {
  flex: 1;
}

.sortIcon {
  font-size: var(--font-size-meta);
}

.tbody {
  background-color: var(--color-white);
}

.tr {
  border-block-end: 1px solid var(--color-grey-300);
  transition: background-color var(--transition-fast) var(--easing-standard);
}

.tr:hover {
  background-color: var(--color-grey-100);
}

.tr.selected {
  background-color: var(--color-grey-200);
}

.td {
  padding: var(--spacing-3) var(--spacing-4);
  font-family: var(--font-share);
  font-size: var(--font-size-body);
  border-inline-end: 1px solid var(--color-grey-200);
}

.td:last-child {
  border-inline-end: none;
}

.checkboxCell {
  inline-size: 48px;
  text-align: center;
}

.checkbox {
  inline-size: 18px;
  block-size: 18px;
  cursor: pointer;
}

.cellContent {
  min-block-size: 24px;
  display: flex;
  align-items: center;
}

.cellContent.editable {
  cursor: pointer;
  padding: var(--spacing-1);
  border: 1px solid transparent;
  transition: all var(--transition-fast) var(--easing-standard);
}

.cellContent.editable:hover {
  background-color: var(--color-grey-100);
  border-color: var(--color-grey-400);
}

.cellInput {
  inline-size: 100%;
  padding: var(--spacing-1) var(--spacing-2);
  font-family: var(--font-share);
  font-size: var(--font-size-body);
  border: 1px solid var(--color-black);
  background-color: var(--color-white);
}

.cellInput:focus {
  outline: none;
  box-shadow: 0 0 0 2px var(--color-black);
}

.addButton {
  padding: var(--spacing-3) var(--spacing-4);
  margin: var(--spacing-3);
  font-family: var(--font-bebas);
  font-size: var(--font-size-h6);
  text-transform: uppercase;
  background-color: var(--color-white);
  border: var(--border-width-thick) solid var(--color-black);
  cursor: pointer;
  transition: all var(--transition-fast) var(--easing-standard);
}

.addButton:hover {
  background-color: var(--color-black);
  color: var(--color-white);
}
