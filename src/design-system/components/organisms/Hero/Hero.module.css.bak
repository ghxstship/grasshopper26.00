/**
 * Hero Styles
 * GHXSTSHIP Entertainment Platform
 * Full-screen, bold ANTON typography, geometric compositions
 */

.hero {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  
  min-height: 100vh;
  min-height: 100dvh;
  
  overflow: hidden;
  isolation: isolate;
}

/* ========================================
   VARIANTS
   ======================================== */

.black {
  background-color: var(--color-black);
  color: var(--color-white);
}

.white {
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
}

/* ========================================
   BACKGROUND MEDIA
   ======================================== */

.backgroundVideo,
.backgroundImage {
  position: absolute;
  inset: 0;
  z-index: 0;
}

.video,
.image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  
  filter: grayscale(100%) contrast(1.2);
}

.videoOverlay,
.imageOverlay {
  position: absolute;
  inset: 0;
  
  background-image: 
    radial-gradient(circle, var(--color-primary) 20%, transparent 20%),
    radial-gradient(circle, var(--color-primary) 20%, transparent 20%);
  background-size: 10px 10px;
  background-position: 0 0, 5px 5px;
  
  opacity: 0.2;
  pointer-events: none;
}

.white .videoOverlay,
.white .imageOverlay {
  background-image: 
    radial-gradient(circle, var(--color-bg-primary) 20%, transparent 20%),
    radial-gradient(circle, var(--color-bg-primary) 20%, transparent 20%);
}

/* ========================================
   GEOMETRIC SHAPES
   ======================================== */

.geometricShapes {
  position: absolute;
  inset: 0;
  z-index: 1;
  pointer-events: none;
}

.shape1,
.shape2,
.shape3 {
  position: absolute;
  border: var(--border-width-3) solid currentColor;
  opacity: 0.1;
}

.shape1 {
  width: 300px;
  height: 300px;
  inset-block-start: 10%;
  inset-inline-end: 5%;
  transform: rotate(45deg);
}

.shape2 {
  width: 200px;
  height: 200px;
  inset-block-end: 15%;
  inset-inline-start: 10%;
  border-radius: var(--radius-none);
}

.shape3 {
  width: 0;
  height: 0;
  inset-block-start: 60%;
  inset-inline-end: 20%;
  border-inline-start: 150px solid transparent;
  border-inline-end: 150px solid transparent;
  border-block-end: 260px solid currentColor;
  border-width: 0;
  border-block-end-width: var(--border-width-3);
  opacity: 0.05;
}

/* ========================================
   CONTENT
   ======================================== */

.content {
  position: relative;
  z-index: 2;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-8);
  
  max-width: 1400px;
  padding-inline: var(--space-6);
  padding-block: var(--space-12);
  
  text-align: center;
}

.title {
  font-family: var(--font-hero);
  font-size: clamp(48px, 10vw, 120px);
  font-weight: var(--font-weight-normal);
  line-height: 0.95;
  letter-spacing: -0.02em;
  text-transform: uppercase;
  
  margin: 0;
  
  text-shadow: var(--shadow-base);
}

.white .title {
  text-shadow: none;
}

.tagline {
  font-family: var(--font-heading);
  font-size: clamp(24px, 4vw, 48px);
  font-weight: var(--font-weight-normal);
  line-height: var(--line-height-tight);
  letter-spacing: var(--letter-spacing-wider);
  text-transform: uppercase;
  
  margin: 0;
  max-width: 800px;
}

/* ========================================
   CTA BUTTON
   ======================================== */

.ctaContainer {
  margin-block-start: var(--space-8);
}

.cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: var(--space-3);
  
  font-family: var(--font-heading);
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  letter-spacing: var(--letter-spacing-wider);
  text-transform: uppercase;
  text-decoration: none;
  
  padding-inline: var(--space-10);
  padding-block: var(--space-5);
  
  min-height: 64px;
  
  border: var(--border-width-3) solid currentColor;
  border-radius: var(--radius-none)(--radius-none);
  background-color: transparent;
  
  color: inherit;
  cursor: pointer;
  
  box-shadow: var(--shadow-md);
  
  transition: all var(--duration-base) var(--easing-out);
}

.black .cta {
  border-color: var(--color-accent);
  color: var(--color-white);
}

.black .cta:hover {
  background-color: var(--color-accent);
  color: var(--color-primary);
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

.white .cta {
  border-color: var(--color-primary);
  color: var(--color-text-primary);
}

.white .cta:hover {
  background-color: var(--color-black);
  color: var(--color-white);
  transform: scale(1.05);
  box-shadow: var(--shadow-lg);
}

.cta:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-sm);
}

.cta:focus-visible {
  outline: var(--border-width-2) solid var(--color-border-focus);
  outline-offset: 4px;
}

.ctaText {
  display: inline-block;
}

.ctaArrow {
  display: inline-block;
  font-size: 1.5em;
  transition: transform var(--duration-fast) var(--easing-out);
}

.cta:hover .ctaArrow {
  transform: translateX(var(--space-2));
}

/* ========================================
   SCROLL INDICATOR
   ======================================== */

.scrollIndicator {
  position: absolute;
  inset-block-end: var(--space-8);
  inset-inline-start: 50%;
  transform: translateX(-50%);
  z-index: 2;
  
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--space-2);
  
  opacity: 0.6;
  
  animation: bounce 2s infinite;
}

.scrollLine {
  width: var(--border-width-3);
  height: 60px;
  background-color: currentColor;
}

.scrollArrow {
  font-family: var(--font-mono);
  font-size: var(--font-size-2xl);
  line-height: 1;
}

@keyframes bounce {
  0%, 100% {
    transform: translate(-50%, 0);
  }
  50% {
    transform: translate(-50%, var(--space-4));
  }
}

/* ========================================
   RESPONSIVE
   ======================================== */

@media (max-width: 48rem) {
  .content {
    padding-inline: var(--space-4);
    gap: var(--space-6);
  }
  
  .title {
    font-size: clamp(36px, 12vw, 80px);
  }
  
  .tagline {
    font-size: clamp(18px, 5vw, 32px);
  }
  
  .cta {
    font-size: var(--font-size-lg);
    padding-inline: var(--space-8);
    padding-block: var(--space-4);
    min-height: 56px;
  }
  
  .shape1 {
    width: 200px;
    height: 200px;
  }
  
  .shape2 {
    width: 150px;
    height: 150px;
  }
}

/* ========================================
   ACCESSIBILITY
   ======================================== */

@media (prefers-reduced-motion: reduce) {
  .cta,
  .ctaArrow {
    transition: none;
  }
  
  .scrollIndicator {
    animation: none;
  }
}

@media (prefers-contrast: high) {
  .cta {
    border-width: var(--border-width-4);
  }
}

/* ========================================
   DARK THEME
   ======================================== */

.dark .white,
[data-theme="dark"] .white {
  background-color: var(--color-bg-primary);
  color: var(--color-text-primary);
}

.dark .black,
[data-theme="dark"] .black {
  background-color: var(--color-black);
  color: var(--color-white);
}
