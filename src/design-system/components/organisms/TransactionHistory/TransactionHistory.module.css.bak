/**
 * TransactionHistory Styles
 * GHXSTSHIP Monochromatic Design System
 */

.history {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-6);
  padding: var(--spacing-6);
  border: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
}

.header {
  padding-block-end: var(--spacing-4);
  border-block-end: var(--border-width-thick) solid var(--color-black);
}

.title {
  margin: 0;
  font-family: var(--font-anton);
  font-size: var(--font-size-h2);
  text-transform: uppercase;
  line-height: 1;
}

.summary {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-4);
}

.summaryCard {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-2);
  padding: var(--spacing-4);
  border: var(--border-width-thick) solid var(--color-black);
}

.summaryLabel {
  font-family: var(--font-bebas);
  font-size: var(--font-size-h5);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
}

.summaryValue {
  font-family: var(--font-share-mono);
  font-size: var(--font-size-h3);
  font-weight: 700;
}

.summaryCard.profit .summaryValue.positive {
  background-color: var(--color-grey-200);
  padding: var(--spacing-2);
}

.summaryCard.profit .summaryValue.negative {
  background-color: var(--color-grey-900);
  color: var(--color-white);
  padding: var(--spacing-2);
}

.filters {
  display: flex;
  gap: var(--spacing-2);
}

.filterButton {
  padding: var(--spacing-2) var(--spacing-4);
  font-family: var(--font-bebas);
  font-size: var(--font-size-h6);
  text-transform: uppercase;
  background-color: var(--color-white);
  border: var(--border-width-thick) solid var(--color-black);
  cursor: pointer;
  transition: all var(--transition-fast) var(--easing-standard);
}

.filterButton:hover {
  background-color: var(--color-grey-100);
}

.filterButton.active {
  background-color: var(--color-black);
  color: var(--color-white);
}

.table {
  display: flex;
  flex-direction: column;
  border: var(--border-width-thick) solid var(--color-black);
}

.tableHeader {
  display: grid;
  grid-template-columns: 2fr 2fr 1fr 1fr 2fr;
  gap: var(--spacing-4);
  padding: var(--spacing-3) var(--spacing-4);
  background-color: var(--color-black);
  color: var(--color-white);
}

.columnHeader {
  font-family: var(--font-bebas);
  font-size: var(--font-size-h6);
  text-transform: uppercase;
  letter-spacing: var(--letter-spacing-wide);
}

.tableBody {
  display: flex;
  flex-direction: column;
}

.row {
  display: grid;
  grid-template-columns: 2fr 2fr 1fr 1fr 2fr;
  gap: var(--spacing-4);
  padding: var(--spacing-3) var(--spacing-4);
  border-block-end: 1px solid var(--color-grey-300);
  cursor: pointer;
  transition: background-color var(--transition-fast) var(--easing-standard);
}

.row:hover {
  background-color: var(--color-grey-100);
}

.cell {
  display: flex;
  flex-direction: column;
  gap: var(--spacing-1);
}

.transactionNumber {
  font-family: var(--font-share-mono);
  font-size: var(--font-size-body);
  font-weight: 700;
}

.transactionType {
  font-family: var(--font-share-mono);
  font-size: var(--font-size-meta);
  text-transform: uppercase;
  color: var(--color-text-secondary);
}

.amount {
  font-family: var(--font-share-mono);
  font-size: var(--font-size-body);
  font-weight: 700;
  padding: var(--spacing-1) var(--spacing-2);
}

.amount.positive {
  background-color: var(--color-grey-200);
}

.amount.negative {
  background-color: var(--color-grey-900);
  color: var(--color-white);
}

.statusBadge {
  padding: var(--spacing-1) var(--spacing-2);
  font-family: var(--font-bebas);
  font-size: var(--font-size-meta);
  text-transform: uppercase;
  border: 1px solid var(--color-black);
  inline-size: fit-content;
}

.statusBadge.pending {
  background-color: var(--color-grey-200);
}

.statusBadge.processing {
  background-color: var(--color-grey-300);
}

.statusBadge.completed {
  background-color: var(--color-black);
  color: var(--color-white);
}

.statusBadge.failed {
  background-color: var(--color-grey-900);
  color: var(--color-white);
}

.statusBadge.refunded {
  background-color: var(--color-grey-500);
}

.date {
  font-family: var(--font-share-mono);
  font-size: var(--font-size-meta);
}

.payment {
  font-family: var(--font-share-mono);
  font-size: var(--font-size-meta);
  color: var(--color-text-secondary);
  text-transform: uppercase;
}
