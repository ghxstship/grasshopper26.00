/**
 * AutomationLayout Styles
 * GHXSTSHIP Monochromatic Design System
 */

.layout {
  display: flex;
  flex-direction: column;
  min-block-size: 100vh;
  background-color: var(--color-grey-100);
}

.header {
  border-block-end: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
}

.main {
  display: grid;
  grid-template-columns: 240px 1fr 320px;
  flex: 1;
  overflow: hidden;
}

.sidebar {
  padding: var(--spacing-4);
  border-inline-end: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
  overflow-y: auto;
}

.canvas {
  flex: 1;
  overflow: auto;
}

.properties {
  padding: var(--spacing-4);
  border-inline-start: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
  overflow-y: auto;
}

.footer {
  border-block-start: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
}

@media (max-width: 64rem) {
  .main {
    grid-template-columns: 1fr;
  }

  .sidebar,
  .properties {
    display: none;
  }
}
