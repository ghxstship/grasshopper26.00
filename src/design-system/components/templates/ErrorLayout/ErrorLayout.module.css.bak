/**
 * Error Layout Styles
 * GHXSTSHIP Monochromatic Design System
 */

.layout {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: var(--color-bg-inverse);
  color: var(--color-white);
  position: relative;
  overflow: hidden;
  padding: var(--space-6);
}

/* Background Pattern */
.pattern {
  position: absolute;
  inset: 0;
  background-image: 
    repeating-linear-gradient(
      45deg,
      transparent,
      transparent 20px,
      var(--color-text-primary) 20px,
      var(--color-text-primary) 22px
    ),
    repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 20px,
      var(--color-text-primary) 20px,
      var(--color-text-primary) 22px
    );
  opacity: 0.03;
  pointer-events: none;
}

/* Content */
.content {
  position: relative;
  z-index: 1;
  text-align: center;
  max-width: 640px;
  width: 100%;
}

/* Logo */
.logo {
  margin-block-end: var(--space-8);
}

/* Error Code */
.code {
  font-family: var(--font-family-display);
  font-size: clamp(120px, 20vw, 240px);
  font-weight: 400;
  line-height: 0.9;
  text-transform: uppercase;
  letter-spacing: -0.04em;
  margin-block-end: var(--space-6);
  text-shadow: 
    8px 8px 0 var(--color-bg-primary),
    16px 16px 0 var(--color-grey-100);
}

/* Title */
.title {
  font-family: var(--font-family-heading);
  font-size: var(--font-size-h1);
  font-weight: 400;
  line-height: 1.1;
  text-transform: uppercase;
  letter-spacing: -0.02em;
  margin: 0;
  margin-block-end: var(--space-4);
}

/* Message */
.message {
  font-family: var(--font-family-body);
  font-size: var(--font-size-h4);
  line-height: 1.5;
  color: var(--color-white);
  opacity: 0.8;
  margin: 0;
  margin-block-end: var(--space-8);
}

/* Actions */
.actions {
  display: flex;
  gap: var(--space-4);
  justify-content: center;
  flex-wrap: wrap;
}

/* ========================================
   RESPONSIVE
   ======================================== */

@media (min-width: 48rem) {
  .layout {
    padding: var(--space-8);
  }
}

/* ========================================
   ANIMATIONS
   ======================================== */

@media (prefers-reduced-motion: no-preference) {
  .content {
    animation: slideUp 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  .code {
    animation: glitch 2s infinite;
  }
  
  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(32px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @keyframes glitch {
    0%, 100% {
      transform: translate(0);
    }
    20% {
      transform: translate(-2px, 2px);
    }
    40% {
      transform: translate(-2px, -2px);
    }
    60% {
      transform: translate(2px, 2px);
    }
    80% {
      transform: translate(2px, -2px);
    }
  }
}
