/**
 * WorkspaceLayout Styles
 * GHXSTSHIP Monochromatic Design System
 */

.layout {
  display: flex;
  flex-direction: column;
  min-block-size: 100vh;
  background-color: var(--color-grey-100);
}

.header {
  border-block-end: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
}

.main {
  display: grid;
  grid-template-columns: auto 1fr auto;
  flex: 1;
  overflow: hidden;
}

.sidebar {
  inline-size: 280px;
  padding: var(--spacing-4);
  border-inline-end: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
  overflow-y: auto;
}

.content {
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.toolbar {
  padding: var(--spacing-3) var(--spacing-4);
  border-block-end: 1px solid var(--color-grey-300);
  background-color: var(--color-white);
}

.workspace {
  flex: 1;
  padding: var(--spacing-4);
  overflow: auto;
}

.rightPanel {
  inline-size: 320px;
  padding: var(--spacing-4);
  border-inline-start: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
  overflow-y: auto;
}

.footer {
  border-block-start: var(--border-width-thick) solid var(--color-black);
  background-color: var(--color-white);
}

@media (max-width: 64rem) {
  .main {
    grid-template-columns: 1fr;
  }

  .sidebar,
  .rightPanel {
    display: none;
  }
}
